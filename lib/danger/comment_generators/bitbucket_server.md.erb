<%- @tables.each do |table| -%>
  <%- if table[:content].any? || table[:resolved].any? -%>
    | <%= table[:count] %> <%= table[:name] %><%= "s" unless table[:count] == 1 %> |
    <%- table[:content].each do |violation| -%>
      | <%= @emoji_mapper.map(table[:emoji]) %> <%= violation.message %> |
    <%- end -%>
  <%- end -%>
<%- end -%>

